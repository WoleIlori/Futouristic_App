<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.wollyz.futouristic.GuideMainActivity">

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/tourToggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Do Tour"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="59dp"
        android:layout_marginEnd="59dp" />

    <Button
        android:id="@+id/guide_selection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Select Landmarks"
        android:layout_below="@+id/tourToggle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="57dp" />



    <Button
        android:id="@+id/createGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create tour group"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/guide_selection"
        android:layout_alignLeft="@+id/viewGroupBtn"
        android:layout_alignStart="@+id/viewGroupBtn" />

    <Button
        android:id="@+id/viewGroupBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Tour Group Status"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/createGroup"
        android:layout_toLeftOf="@+id/tourToggle"
        android:layout_toStartOf="@+id/tourToggle" />
</RelativeLayout>
