<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.wollyz.futouristic.RegisterTouristActivity">
    <TextView
        android:id="@+id/logo_tourist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FUTOURISTIC"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textSize="30dp"
        android:textColor="@color/navyblue"
        />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/username_tourist"
        android:hint="Username"
        android:inputType="text"
        android:imeOptions="actionNext"
        android:background="@drawable/edittextstyle"
        android:padding="5dp"
        android:layout_below="@+id/logo_tourist"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/password_tourist"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_below="@+id/username_tourist"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@+id/username_tourist"
        android:padding="5dp"
        android:background="@drawable/edittextstyle"

        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/email_tourist"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:layout_below="@+id/password_tourist"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@+id/username_tourist"
        android:padding="5dp"
        android:background="@drawable/edittextstyle"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nationality"
        android:hint="Country"
        android:inputType="text"
        android:layout_below="@+id/email_tourist"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@+id/username_tourist"
        android:padding="5dp"
        android:background="@drawable/edittextstyle"
        />

    <Button
        android:id="@+id/registerTouristBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Account"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/nationality"
        android:layout_alignRight="@+id/nationality"
        android:layout_alignEnd="@+id/nationality" />

</RelativeLayout>
